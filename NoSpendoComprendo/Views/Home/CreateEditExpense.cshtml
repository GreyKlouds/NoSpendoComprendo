@{
    ViewData["Title"] = "Create / Edit";
}
@model NoSpendoComprendo.Models.Expense

<div class="text-center">
   
</div>
<div class="text-center">
    <h2 class="display-4">Create or Edit an expense</h2>
    <a asp-controller="Home" asp-action="CreateEditExpense" class="btn btn-secondary">Create New</a>
</div>
<form asp-action="CreateEditExpenseform" asp-controller="Home">
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id"  />
    <label class="mt-4">Value $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="value" step="0.01" />

    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add a descrption" asp-for="Description"/>
    <button class="btn btn-primary" type="submit" mt-4>Ok</button>

</form>